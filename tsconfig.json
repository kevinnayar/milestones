{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2018",
    "module": "commonjs",
    "incremental": true,
    "declaration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "outDir": "dist",
    "types": [ "node", "jest" ],
  },
  "exclude": [
    "node_modules"
  ]
}

